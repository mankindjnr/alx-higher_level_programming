#!/usr/bin/python3
"""
Write a Python script that takes in a URL and an email, sends a POST request
to the passed URL with the email as a parameter, and displays the body of
the response (decoded in utf-8)
"""
import urllib.request
import sys

def send_post_req(url, email):
    data = email.encode('utf-8')

    with urllib.request.urlopen(url, data) as resp:
        body = resp.read().decode('utf-8')
        print(body)

if __name__ == "__main__":
    url = sys.argv[1]
    email = sys.argv[2]

    send_post_req(url, email)
